{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "noImplicitThis": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "paths": {
      "@server/*": ["src/server/*"],
      "@shared/*": ["src/shared/*"],
    },
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", "src/custom/server.ts"],
  "exclude": ["node_modules"]
}
